{
    "builds": [
        { "src": "api.py",
          "use": "@vercel/python",
          "config": { "maxLambdaSize": "15mb", "runtime": "python3.10" }
        }
    ],
    "routes": [
        { "src": "/(.*)",
          "dest": "api.py" 
        }
    ],
    "installCommand": "pip install -r requirements.txt"
}